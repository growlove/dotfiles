alias g="git"
alias c="clear"
alias e="$EDITOR"
alias sudoedit="sudo $EDITOR"

if command_exists graphcool-framework; then
  alias graphcool=graphcool-framework
fi

# macvim
if command_exists mvim; then
  export EDITOR="mvim -v"
  alias vim="mvim -v"
else
  export EDITOR="vim"
fi
export VISUAL=$EDITOR

# dotfiles repo alias
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'


